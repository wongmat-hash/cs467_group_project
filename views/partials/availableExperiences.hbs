<!-- This partial renders in the TripExperiences page where available experiences in the db can be added to the
    selected trip. -->
<h3>Add experiences</h3>

<div class="table-responsive">
    <table class="table">
        <thead>
            <b>Experience name</b>
        </thead>
        <tbody>
            {{#each expData}}
            <tr>
                <input type="hidden" id="addExpTripID" value="{{tripID}}" />
                <input type="hidden" id="addExpTripName" value="{{tripName}}" />
                <input type="hidden" id="addExpID" value="{{jsonHelper this.experienceID}}" />
                <input type="hidden" id="addExpName" value="{{jsonHelper this.experienceTitle}}" />
                <td>{{jsonHelper this.experienceTitle}}</td>
                <td><button class="btn btn-primary" onclick="addExperienceToTrip()">Add</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>