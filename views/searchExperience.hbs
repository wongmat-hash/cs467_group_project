<!DOCTYPE html>
<html>
    <head>
        {{> searchNavbar}}
        <title>{{title}}</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="../css/landing.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="../js/scripts.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row content">
                {{> nav}}
                <div class="col-sm-9">
                    {{#each Experiences}}
                    <div class="mt-5 d-flex justify-content-end align-items-center vstack gap-3">
                        <div id="search-exp" class="search-exp">
                            <div class="col-lg-8 d-flex justify-content-between m-2">
                                <div class="col-lg-6  expimage">
                                    <img class="experienceImage" src='../upload/{{this.image}}' width="200" height:auto>
                                </div>
                                <div class="col p-3 experienceDetails expdetails">
                                    <p>Experience Title: {{this.experienceTitle}}</p>
                                    <p>Overall Rating: {{this.ratingValue}}</p>
                                    <form action="/searchExperience" class="addRating" method="POST" encType="multipart/form-data">
                                        <div class="row">
                                            <div class="col">
                                                <label for="ratingValue">Rate Experience:</label>
                                            </div>
                                            <div class="col">
                                                <input type="text" class="form-control" id="ratingValue" name="addRatingValue">
                                                <input type="hidden" name="experienceID" value={{this.experienceID}} id="experienceID">
                                            </div>
                                        </div>
                                        <button type="submit" id="submit" class="btn btn-success">Submit</button>
                                        <!-- Button to open the modal -->
                                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">Open Details</button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="myModal">
                                            <div class="modal-dialog">
                                                <div class="modal-content">

                                                    <!-- Modal header -->
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Experience Details</h4>
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    </div>

                                                    <!-- Modal body -->
                                                    <div class="modal-body">
                                                        <p>Experience Title: {{this.experienceTitle}}</p>
                                                        <p>Location: {{this.location}}</p>
                                                        <p>Keywords: {{this.note}}</p>
                                                        <p>Overall Rating: {{this.ratingValue}}</p>
                                                        <p>Description: {{this.description}}</p>
                                                    </div>

                                                    <!-- Modal footer -->
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                  {{/each}}
                </div>
            </div>
        </div>
        <script>
            const keywordRadio = document.getElementById('byKeywordRadio');
            const userInput = document.getElementsByName('searchExp');
          </script>
        <div class="container mt-5">
            {{body}}
        </div>
    </body>
</html>
