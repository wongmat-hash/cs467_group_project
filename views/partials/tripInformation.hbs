<!-- This partial renders in the TripExperiences page where it displays the overall information of a trip. -->


<h3>Current trip experiences</h3>

<div class="table-responsive">
    <table class="table">
        <thead>
            <b>Experience name</b>
        </thead>
        <tbody>
            {{#each expData}}
            <tr>
                <td>{{jsonHelper this.experienceTitle}}</td>
                <td><button type="submit" class="btn btn-primary">Add</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>