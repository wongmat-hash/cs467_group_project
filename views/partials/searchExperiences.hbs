<form class="row g-3 align-items-center" role="search">
  <div class="col-auto">
    <div class="input-group">
      <span class="input-group-text" id="searchBar">
        <i class="bi bi-search"></i>
      </span>
      <input class="form-control" type="search" placeholder="Search experiences..."
        aria-label="Search experiences..." />
    </div>
  </div>
  <div class="col-auto">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="byKeywordRadio" checked >
      <label class="form-check-label" for="byKeywordRadio">
        by keyword
      </label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="byLocationRadio">
      <label class="form-check-label" for="byLocationRadio">
        by location
      </label>
    </div>
  </div>

  <div class="col-auto">
    <button class="btn btn-success" type="submit">
      Search
    </button>
  </div>
</form>